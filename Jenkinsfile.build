pipeline {
  agent any
  stages {
    stage('Build') {
      withMaven {
        sh 'mvn compile'
      }
    }

    stage("Unit test") {
      steps {
        sh 'mvn test'
      }
    }

    stage("Package") {
      steps {
        sh 'mvn package'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
