pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        withMaven (maven: 'default') {
          sh 'mvn compile'
        }
      }
    }

    stage("Unit test") {
      steps {
        withMaven (maven: 'default') {
          sh 'mvn test'
        }
      }
    }

    stage("Package") {
      steps {
        withMaven (maven: 'default') {
          sh 'mvn package'
        }
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
